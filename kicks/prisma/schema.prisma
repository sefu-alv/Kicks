// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Product {
  id String @id @default(uuid())
  name String
  priceInCents Int
  description String
  gender String
  productImage String
  category String
  isAvailable Boolean @default(true)
  orders Order[]
}
model Costumer{
  id String @id @default(uuid())
  email String @unique
  password String
  orders Order[]

}

model Order {
   id String @id @default(uuid())
   userId String
   productId String
   address String
   city String
   zipCode String
   country String
   user Costumer @relation(fields : [userId] , references: [id] , onDelete: Cascade)
   product Product @relation(fields : [productId] , references: [id] , onDelete: Restrict)
}